<!DOCTYPE html>
<html>
  <head>
    <title>AlcaLib</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <%- include("partials/navbar") %>

    <div class="books">
      <% books.forEach(book => { %>
        <div class="book-card">
  <img src="<%= book.cover_url %>" alt="<%= book.title %>" />
  <div class="book-info">
    <strong><%= book.title %></strong>
    <p>by <%= book.author %></p>
<p>
  <% for(let i = 1; i <= 5; i++) { %>
    <% if (i <= book.rating) { %>
      ⭐
    <% } else { %>
      ☆
    <% } %>
  <% } %>
</p>


    <div class="notes-section">
      <p class="notes-preview">
        <%= book.notes && book.notes.length > 120 
              ? book.notes.substring(0, 120) + "..." 
              : book.notes %>
      </p>
    </div>

    <!-- Butonu sabit konuma taşıyoruz -->
    <div class="details-wrapper">
  <a href="/book/<%= book.id %>" class="details-btn">Details</a>
  <a href="/book/<%= book.id %>/edit" class="edit-btn">Edit</a>
  <form action="/book/<%= book.id %>?_method=DELETE" method="POST" 
      style="display:inline;" 
      onsubmit="return confirm('Are you sure you want to delete this book?');">
  <button type="submit" class="delete-btn">Delete</button>
</form>

</form>

</div>

  </div>
</div>

      <% }) %>
    </div>
  </body>
</html>
